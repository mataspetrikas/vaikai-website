{# =base
 # --------------------------------------------------------------- #}
{% macro base(prm) %}
  {# =allow custom semantic tagname #}
  {% set tagname = prm.semantics|default('section', true) %}
  {% set themeclass = ('theme-' ~ prm.theme) if prm.theme else '' %}

  <{{tagname}} id="{{ prm.name }}" class="section section-{{ prm.name }} {{ themeclass }}">
    {{ caller() }}
  </{{tagname}}>

{% endmacro %}