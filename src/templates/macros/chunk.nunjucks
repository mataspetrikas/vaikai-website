{# =Base #}
{% macro base(content) %}
  <div class="chunk">
    <div class="chunk-inner">
      {% include content %}
    </div>
  </div>
{% endmacro %}

{# =Split #}
{% macro split(content) %}
  <div class="chunk chunk--split">
    <div class="chunk-inner">
      {% include content %}
    </div>
  </div>
{% endmacro %}