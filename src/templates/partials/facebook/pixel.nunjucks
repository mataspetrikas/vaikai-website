<!-- =Facebook Pixel (Custom Audiences)-->
<script>(function() {
  var _fbq = window._fbq || (window._fbq = []);
  if (!_fbq.loaded) {
  var fbds = document.createElement('script');
  fbds.async = true;
  fbds.src = '//connect.facebook.net/en_US/fbds.js';
  var s = document.getElementsByTagName('script')[0];
  s.parentNode.insertBefore(fbds, s);
  _fbq.loaded = true;
  }
  _fbq.push(['addPixelId', '{{ settings.integrations.facebook.pixel_id }}']);
  })();

  window._fbq = window._fbq || [];
  window._fbq.push(['track', 'PixelInitialized', {}]);

  {% if page.tracking.facebook %}
    window._fbq.push(['track', '{{ page.tracking.facebook }}', {'value':'0.00','currency':'USD'}]);
  {% endif %}

</script>
<noscript>
  <img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?id={{ settings.integrations.facebook.pixel_id }}&amp;ev=PixelInitialized" />
</noscript>