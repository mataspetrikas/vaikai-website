{% import 'macros/symbol.nunjucks' as symbol %}

<figure class="mention">
  <blockquote class="mention-quote">{{ mention.content }}</blockquote>
  <figcaption class="mention-caption">
    <a class="mention-credit link-quiet" href="{{ mention.author.url }}">
      {% set logoname = mention.author.name|compactify %}
      {{ symbol.logo(logoname, mention.author.name, 'mention-author') }}
      <strong class="mention-name">{{ mention.author.name }}</strong>
    </a>
  </figcaption>
</figure>