{% import 'macros/popup.nunjucks' as popup %}
{% import 'macros/video.nunjucks' as video %}
{% import 'macros/symbol.nunjucks' as symbol %}
{% import 'macros/image.nunjucks' as image %}

{# =Intro #}
<section id="intro" class="section theme-green">
  <div class="chunk chunk--narrow">
    <div class="chunk-inner">

      <div class="split grid grid--middle">
        <!-- =Intro-Object -->
        <div class="split-object avk-duo scrollme grid-cell span-4of12 sm-span-6of12">
          {# {{ img.lazyflex() }} #}

          <!-- =AVAKAI-DUO-LEAD -->
          <div class="avk-duo-lead" role="presentation">
            <!-- =AVK-TRUNC  -->
            <div class="avk-trunc animateme" role="presentation"
              data-when="span" data-from="0" data-to="0.5" data-translatey="-200" data-easing="linear"
            >
              {{ image.lazy('images/avakai-blue-trunc.png') }}
            </div>

            <!-- =AVK-BASE-BACK  -->
            <div class="avk-base-back animateme" role="presentation"
              data-when="span" data-from="0.25" data-to="1.5" data-translatey="-100" data-easing="easein"
            >
              {{ image.lazy('images/avakai-blue-base-back.png') }}
            </div>

            <!-- =AVK-BASE-FRONT  -->
            <div class="avk-base-front animateme" role="presentation"
              data-when="span" data-from="0.25" data-to="1.5" data-translatey="-100" data-easing="easein"
            >
              {{ image.lazy('images/avakai-blue-base-front.png') }}
            </div>

            <!-- =AVAKAI-TREASURE -->
            <div class="avk-treasure" role="presentation" aria-hidden="true">
              <span class="star star-one animateme"
                data-when="span" data-to="0.2" data-from="0.54" data-easing="easeinout"
                data-opacity="0.2" data-translatex="15" data-translatey="95" data-scale="0.667"
              ></span>
              <span class="star star-two star--sm animateme"
                data-when="span" data-to="0.2" data-from="0.63" data-easing="easeout"
                data-opacity="0.2" data-translatex="10" data-translatey="125" data-scale="0.75"></span>
              <span class="star star-three star--sm animateme"
                data-when="span" data-to="0.07" data-from="0.62" data-easing="easeinout"
                data-opacity="0.2" data-translatex="-45" data-translatey="140" data-scale="0.75"></span>
              <span class="star star-four star--md star--yellow animateme"
                data-when="span" data-to="0.15" data-from="0.73" data-easing="easeout"
                data-opacity="0.2" data-translatex="-60" data-translatey="115" data-scale="0.75"></span>
              <span class="star star-five star--lg star--yellow  animateme"
                data-when="span" data-to="0.05" data-from="0.61" data-easing="easeinout"
                data-opacity="0.2" data-translatex="-30" data-translatey="145" data-scale="0.833"></span>
            </div>
          </div>

          <!-- =AVAKAI-DUO-FOLLOW -->
          <div class="avk-duo-follow avk-natural animateme" role="presentation"
            data-when="span" data-from="0" data-to="1" data-easing="linear" data-translatey="-200"
          >
            {{ image.lazy('images/avakai-natural.png') }}
          </div>
        </div>
        <!-- /Intro-Object -->

        <!-- =Intro-Text -->
        <div class="split-body grid-cell span-8of12 sm-span-6of12">
          <div class="landmark centrum centrum--left">
            <h2 class="h1">Less Screentime<br />
              more play</h2>
            <p class="s-zeta m-delta">Meet the Avakai Family<br/>Crafted wooden toy twins that enable kids to discover free play and a connected world without screens. </p>
            <p class="landmark"><a class="link-quiet shoutout js-toggle" href="http://www.vimeo.com/130435350" target="_blank" data-action="video:play" data-target="#intro-video">
              {{ symbol.preIcon('play', 'watch video', 'icon--md') }}
            </a></p>
          </div>
        </div>
        <!-- /Intro-Text -->
      </div>

    </div>
  </div>

  {% call popup.base('intro-video', parent='intro') %}
    {{ video.vimeo('130435350') }}
  {% endcall %}
</section>
{# /Intro #}